<%- include('partials/head', {title: 'Form Buy'}) %>
<%- include('partials/navbar') %>
<body>
    <form method="post">
        <label for="">First Name</label><br>
        <input type="text" name="firstName" value="<%= data.firstName %>"><br><br>
        <label for="">Last Name</label><br>
        <input type="text" name="lastName" value="<%= data.lastName %>"><br><br>
        <label for="">Age</label><br>
        <input type="number" name="age" value="<%= data.age %>"><br><br>
        <label for="">Residence</label><br>
        <input type="text" name="residence" value="<%= data.residence %>"><br><br>
        <button class="btn btn-success" type="submit">Confirm</button>
        <button class="btn btn-danger" type="button" onclick="location.href='/profile/<%= data.id %>';">Cancel</button>
    </form>
</body>
</html>